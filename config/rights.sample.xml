<rights>
	<actions>
		<document name="folder">
			<action name="ViewList" inherit-permissions="true">
				<permission name="Display" />
			</action>

			<action name="ViewDetail" >
				<permission name="Display" />
			</action>
		</document>

		<action name="GetPreferencesDocument" />
			<!-- actionname GetPreferencesDocument -->
			<!-- permissionname GetPreferencesDocument -->
		<action name="Order" back-office-name="openOrderChildren"/>
		<action name="Display"/>

	</actions>

	<roles>
		<rootrole>
			<permission name="Delete.*" />
		</rootrole>

		<role name="Admin">
			<permission name="*" />
		</role>

		<role name="Editor">
			<permission name="Load.*" />
			<permission name="*.Page" />
		</role>

		<frontendrole name="AuthenticatedUser">
			<permission name="Display" />
			<permission name="ViewList" />
		</frontendrole>
	</roles>
</rights>
